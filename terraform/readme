kubectl get clusterrolebinding pod-reader-binding-global
# ğŸ“Œ Confirms the binding exists

kubectl describe clusterrolebinding pod-reader-binding-global
# ğŸ“Œ Shows which SA is bound to which ClusterRole

kubectl get clusterrole pod-reader-global
# ğŸ“Œ Confirms the ClusterRole was created

kubectl describe clusterrole pod-reader-global
# ğŸ“Œ See what permissions are attached (rules)

kubectl get serviceaccounts
# ğŸ“Œ Lists all ServiceAccounts in the 'default' namespace

kubectl describe serviceaccount flask-service-account
# ğŸ“Œ Detailed info including secrets linked to this SA

kubectl get pods -n ingress-nginx
